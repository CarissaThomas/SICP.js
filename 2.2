function x_point(p){
  return head(p);
}

function y_point(p){
  return tail(p);
}

function average(a,b){
  return (a + b) / 2.0;
}

function midpoint_segment(segment){//takes our segment as a parameter
  var a = start_segment(segment);//head
  var b = end_segment(segment);//tail
  return make_point( average(x_point(a), x_point(b)), average(y_point(a), y_point(b)) );//get the average of the head and tail of each of the head and tail of the segment
}

