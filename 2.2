function make_point(x,y){
  return pair(x,y);
}

function make_segment(start_point,end_point) {//points paired up to a segment 
  return pair(start_point,end_point);//return to run the midpoint_segment
}

function segement(){//makes a segement out of our 2 points, with 4 coordinates
